{
  "name": "@hcorta/react-to-image",
  "description": "A React hook for converting any component to image",
  "productName": "react-to-image",
  "version": "0.0.1",
  "license": "MIT",
  "private": false,
  "author": "hcorta (http://github.com/hcorta)",
  "homepage": "https://hcorta.github.io/react-to-image/",
  "repository": {
    "type": "git",
    "url": "https://github.com/hcorta/react-to-image"
  },
  "bugs": {
    "url": "https://hcorta.github.io/react-to-image/issues"
  },
  "keywords": [
    "react",
    "component",
    "hook",
    "image",
    "react-component"
  ],
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --no-compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "peerDependencies": {
    "html-to-image": "^1.9.0",
    "react": ">=15.0.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^7.8.0",
    "eslint-config-standard": "^15.0.1",
    "eslint-config-standard-react": "^10.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^3.1.0",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "react-scripts": "^4.0.0"
  },
  "files": [
    "dist"
  ]
}
