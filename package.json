{
  "name": "@hugocxl/react-to-image",
  "description": "Transform your React components into images",
  "productName": "@hugocxl/react-to-image",
  "version": "0.0.7",
  "license": "MIT",
  "private": false,
  "author": "hugocxl (http://github.com/hugocxl)",
  "homepage": "https://hugocxl.github.io/react-to-image/",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugocxl/react-to-image"
  },
  "bugs": {
    "url": "https://hugocxl.github.io/react-to-image/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "dev": "tsup --format=esm,cjs --no-dts --watch",
    "build": "tsup",
    "test": "jest --coverage",
    "changelog": "npx conventional-changelog-cli conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "postchangelog": "git add CHANGELOG.md && git commit -m 'CHANGELOG'",
    "preversion": "git pull && pnpm i && pnpm test && pnpm build",
    "postversion": "pnpm changelog && pnpm postchangelog && git push && git push --tags",
    "format:check": "pnpm format --list-different",
    "format:fix": "pnpm format --write",
    "format": "prettier --cache --ignore-path .gitignore ./src",
    "lint:check": "pnpm lint",
    "lint:fix": "pnpm lint --fix",
    "lint": "eslint --cache --ignore-path .gitignore ./src",
    "setup:env": "npx vercel env pull .env.local",
    "static:check": "pnpm lint:check && pnpm format:check && pnpm types:check",
    "static:fix": "pnpm lint:fix && pnpm format:fix",
    "types:check": "pnpm types --noEmit",
    "types": "tsc"
  },
  "peerDependencies": {
    "html-to-image": ">=1.0.0",
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.5",
    "@types/react": ">=16.0.0",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint": "^8.51.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2"
  }
}
