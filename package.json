{
  "name": "@hugocxl/react-to-image",
  "description": "Transform your React components into images",
  "productName": "@hugocxl/react-to-image",
  "version": "0.0.6",
  "license": "MIT",
  "private": false,
  "author": "hugocxl (http://github.com/hugocxl)",
  "homepage": "https://hugocxl.github.io/react-to-image/",
  "repository": {
    "type": "git",
    "url": "https://github.com/hugocxl/react-to-image"
  },
  "bugs": {
    "url": "https://hugocxl.github.io/react-to-image/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "scripts": {
    "dev": "pnpm bundle -w",
    "serve": "pnpm build && node dist/index.js",
    "build": "pnpm clean && pnpm bundle",
    "bundle": "rollup -c",
    "clean": "rm -rf ./dist",
    "test": "jest --coverage",
    "changelog": "npx conventional-changelog-cli conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "postchangelog": "git add CHANGELOG.md && git commit -m 'CHANGELOG'",
    "preversion": "git pull && pnpm i && pnpm test && pnpm build",
    "postversion": "pnpm changelog && pnpm postchangelog && git push && git push --tags",
    "format:check": "pnpm format --list-different",
    "format:fix": "pnpm format --write",
    "format": "prettier --cache --ignore-path .gitignore ./src",
    "lint:check": "pnpm lint",
    "lint:fix": "pnpm lint --fix",
    "lint": "eslint --cache --ignore-path .gitignore ./src",
    "setup:env": "npx vercel env pull .env.local",
    "static:check": "pnpm lint:check && pnpm format:check && pnpm types:check",
    "static:fix": "pnpm lint:fix && pnpm format:fix",
    "types:check": "pnpm types --noEmit",
    "types": "tsc"
  },
  "peerDependencies": {
    "@types/react": ">=16.0.0",
    "html-to-image": ">=1.0.0",
    "react": ">=16.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-next": "^13.4.9",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.6.1",
    "jest-environment-jsdom": "^29.6.1",
    "prettier": "^3.0.0",
    "rollup": "^3.26.2",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
